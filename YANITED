      ];

      async function loadCountries(){
        const sel = document.getElementById('country');
        const cacheKey = 'countries_v1';
        const populate = list => {
          const sorted = list.slice().sort((a,b)=>a.name.localeCompare(b.name));
          sel.innerHTML = '<option value="">Select a country</option>' + sorted.map(c=>`<option value="${c.code}">${c.name}</option>`).join('');
        };

        // Use cached list immediately if available
        try{
          const cached = localStorage.getItem(cacheKey);
          if(cached){
            populate(JSON.parse(cached));
          }
        }catch(e){console.warn('LocalStorage read failed', e)}

        // Try fetching fresh list; fall back to embedded on failure
        try{
          const res = await fetch('https://restcountries.com/v3.1/all');
          if(!res.ok) throw new Error('Country fetch failed');
          const data = await res.json();
          const list = data.map(c=>({name:c.name.common, code:c.cca2}));
          try{ localStorage.setItem(cacheKey, JSON.stringify(list)); }catch(e){/* ignore */}
          populate(list);
        }catch(err){
          // If nothing was shown from cache, use embedded list
          const currentOptions = sel.options.length;
          if(currentOptions <= 1){
            populate(EMBEDDED_COUNTRIES);
          }
          console.error('Could not fetch countries, using fallback.', err);
        }
      }

      document.addEventListener('DOMContentLoaded', ()=>{
        loadCountries();

        const form = document.getElementById('regForm');
        const message = document.getElementById('message');
        form.addEventListener('submit', e=>{
          e.preventDefault();
          if(!form.checkValidity()){
            form.reportValidity();
            return;
          }
          const fm = new FormData(form);
          const payload = {};
          fm.forEach((v,k)=>payload[k]=v);
          message.style.display = 'block';
          message.textContent = 'Registration received — this demo shows a successful client-side submit.\n' + JSON.stringify(payload, null, 2);
        });
      });
    </script>
